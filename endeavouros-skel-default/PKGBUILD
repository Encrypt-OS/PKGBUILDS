# Maintainer: SnailDOS <encryptos@snaildos.com>
# Contributor: joekamprad <joekamprad@Encrypt-OS.com>

_pkgname=Encrypt-OS-xfce4-theming
pkgname=Encrypt-OS-skel-default
pkgver=1.0
pkgrel=3
pkgdesc="pre user creation skel setup for GTK and xfce4-terminal under Encrypt-OS"
arch=('any')
groups=('Encrypt-OS')
url="https://github.com/Encrypt-OS/${_pkgname}"
license=('GPL')
makedepends=('git')
source=("${_pkgname}::git+https://github.com/Encrypt-OS/${_pkgname}.git#branch=master")
sha256sums=('SKIP')

package() {
    PREFIX=/etc/skel
    cd "$_pkgname"
    mkdir -p "${pkgdir}${PREFIX}/.config/"
    mkdir -p "${pkgdir}${PREFIX}/.config/xfce4/"
    cp -R ".config/xfce4/terminal" "${pkgdir}${PREFIX}/.config/xfce4/"
    cp -R ".config/gtk-3.0" "${pkgdir}${PREFIX}/.config/"
    cp -R ".config/gtk-4.0" "${pkgdir}${PREFIX}/.config/"
    install -Dm644 ".nanorc" "${pkgdir}${PREFIX}/.nanorc"
    install -Dm755 ".Xresources" "${pkgdir}${PREFIX}/.Xresources"
    install -Dm644 "xed.dconf" "${pkgdir}${PREFIX}/xed.dconf"
}
