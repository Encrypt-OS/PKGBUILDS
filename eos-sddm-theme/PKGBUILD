# Maintainer: Encrypt-OS <info@Encrypt-OS.com>

pkgname=eos-sddm-theme
pkgver=2.0
pkgrel=2
pkgdesc='Encrypt-OS Theme for SDDM'
arch=('any')
url="https://github.com/Encrypt-OS"
license=('GPL')
depends=('sddm' 'qt5-quickcontrols2')
makedepends=('git')
install=eos-sddm-theme.install
source=(
'git+https://github.com/Encrypt-OS/eos-sddm-theme.git'
'eos-sddm-theme.install'
)
sha256sums=(
'SKIP'
'SKIP'
)

package() {
    install -dm 755 $pkgdir/usr/share/sddm/themes/Encrypt-OS
    install -dm 755 $pkgdir/etc/sddm.conf.d/
    cp -r --no-preserve=ownership $srcdir/$pkgname/Encrypt-OS $pkgdir/usr/share/sddm/themes/
    cp --no-preserve=ownership $srcdir/$pkgname/10-Encrypt-OS.conf $pkgdir/etc/sddm.conf.d/
}
