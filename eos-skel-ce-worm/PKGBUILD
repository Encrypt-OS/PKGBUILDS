# Contributor: joekamprad <joekamprad@Encrypt-OS.com>

_pkgname=worm
pkgname=eos-skel-ce-worm
pkgver=1.0
pkgrel=9
pkgdesc="pre user creation skel setup for worm EOS-CE"
arch=('any')
groups=('eos-ce')
url="https://github.com/Encrypt-OS-Community-Editions/${pkgname}"
license=('GPL')
depends=('git')
source=("${_pkgname}::git+https://github.com/Encrypt-OS-Community-Editions/${_pkgname}.git")
sha256sums=('SKIP')

package() {
    PREFIX=/etc/skel
    cd "$_pkgname"
    mkdir -p "${pkgdir}${PREFIX}/.config/"
    chmod +x .config/worm/rc
    chmod +x .config/sxhkd/sxhkdrc
    install -Dm644 ".Xresources" "${pkgdir}${PREFIX}/.Xresources"
    install -Dm644 ".dmrc" "${pkgdir}${PREFIX}/.dmrc"
    cp -R ".config/" "${pkgdir}${PREFIX}/"
}
