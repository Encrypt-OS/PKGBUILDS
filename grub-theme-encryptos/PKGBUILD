pkgname=grub2-theme-EncryptOS
pkgver=20220409
pkgrel=1
pkgdesc='EncryptOS grub2 theme'
arch=(any)
url='https://github.com/Encrypt-OS/'
license=('GPL3')
depends=('grub')
replaces=('vimix-grub' 'grub-theme-vimix' 'grub-themes-vimix')
